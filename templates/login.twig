{% extends 'app.twig' %}

{% block content %}
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-body">
				<img class="center" src="https://i.pinimg.com/originals/0a/41/0e/0a410e3a4f03610eed0dbbbcd2f0a3db.png" alt="Hogwarts Logo">
				<h3 align="center">Hogwarts School</h3>
				<form method="post" name="userForm" id="userForm" action="checkUser">	
					<div class="form-group">
						<label for="user_name">Login</label>
						<input type="text" class="form-control" id="user_name" name="user_name" required>
					</div>
					<div class="form-group">
						<label for="password">Senha</label>
						<input type="password" class="form-control" id="password" name="password" required>
					</div>
					<div class="form-group">
						<button type="submit" id="login" class="btn btn-default center">Entrar</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block css %}
<style>
	.center {
		  display: block;
		  margin-left: auto;
		  margin-right: auto;
		  width: 50%;
	}
</style>
{% endblock %}