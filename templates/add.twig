<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container">
  <h3>Novo Bruxo</h3>
  <form method="post" name="userForm" id="userForm" action="add">
    <div class="form-group">
      <label for="nome_completo">Nome Completo</label>
      <input type="text" class="form-control" id="nome_completo" name="nome_completo" placeholder="Digite o nome completo">
    </div>
    <div class="form-group">
      <label for="idade">Digite a idade</label>
      <input type="number" class="form-control" id="idade" name="idade" placeholder="Idade">
    </div>
    <div class="form-group">
      <label for="nome_completo">Especialidade</label>
      <input type="text" class="form-control" id="especialidade"  name="especialidade" placeholder="Digite a especialidade">
    </div>
    <div class="form-group form-check">
      <label class="form-check-label" for="status">Ativo</label>
      <input type="checkbox" class="form-check-input" id="status" name="status">    
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>